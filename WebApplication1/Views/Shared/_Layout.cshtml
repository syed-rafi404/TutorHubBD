<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorHubBD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TutorHubBD.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-white.png" alt="Logo" style="height: 40px; margin-right: 10px;" />
                    <span style="font-weight: 700; font-size: 1.5rem; color: white;">TutorHubBD</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between align-items-center">
                    @using Microsoft.AspNetCore.Identity
                    @using TutorHubBD.Web.Models
                    @inject SignInManager<ApplicationUser> SignInManager
                    @inject UserManager<ApplicationUser> UserManager

                    <ul class="navbar-nav flex-grow-1 justify-content-center align-items-center gap-3">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        
                        @if (!SignInManager.IsSignedIn(User) || User.IsInRole("Teacher") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="TuitionOffer" asp-action="Index">Browse Tuition Jobs</a></li>
                        }
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (User.IsInRole("Guardian"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="TuitionRequest" asp-action="Index">Dashboard</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="TuitionOffer" asp-action="MyJobs">My Jobs</a></li>
                            }
                            
                            @if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="TuitionRequest" asp-action="MyApplications">My Applications</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Tutor" asp-action="EditProfile">Tutor Profile</a></li>
                                @await Html.PartialAsync("_InvoiceBadge")
                            }
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="TuitionRequest" asp-action="Index">Dashboard</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a></li>
                            }
                            
                            @if (User.IsInRole("Guardian") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Tutor" asp-action="Browse">Browse Tutors</a></li>
                            }
                        }
                    </ul>
                    
                    <ul class="navbar-nav align-items-center gap-2">
                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Guardian") || User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn-nav-post-job" asp-controller="TuitionOffer" asp-action="Create">Post a Tuition Job</a>
                            </li>
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            @await Html.PartialAsync("_NotificationBadge")
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Profile" title="Manage">Profile</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link" style="color: white;">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link btn-nav-login" asp-controller="Account" asp-action="Login">Login</a></li>
                            <li class="nav-item"><a class="nav-link btn-nav-register" asp-controller="Account" asp-action="Register">Register</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()  
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
