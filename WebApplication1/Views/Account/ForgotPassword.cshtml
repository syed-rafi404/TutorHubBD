@model TutorHubBD.Web.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="glass-card p-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="bi bi-key" style="font-size: 4rem; color: #667eea;"></i>
                    </div>
                    <h2 class="mb-1">Forgot Password?</h2>
                    <p class="text-white-50">
                        Enter your email address and we'll send you a verification code to reset your password.
                    </p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post" asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-gradient w-100 py-3 mb-3">
                        <i class="bi bi-envelope me-2"></i>Send Verification Code
                    </button>
                </form>

                <div class="text-center mt-3">
                    <p class="mb-0 text-white-50">
                        Remember your password? 
                        <a asp-action="Login" class="fw-bold text-white">Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
