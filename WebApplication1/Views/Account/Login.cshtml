@model TutorHubBD.Web.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="glass-card p-5">
                <div class="text-center mb-4">
                    <h2 class="mb-1">Welcome Back</h2>
                    <p class="text-white-50">Sign in to continue to TutorHubBD</p>
                </div>

                <form method="post" asp-action="Login">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" style="background-color: rgba(255,255,255,0.1); border-color: rgba(255,255,255,0.3);" />
                        <label asp-for="RememberMe" class="form-check-label text-white-50">Remember me?</label>
                    </div>

                    <button type="submit" class="btn btn-gradient w-100 py-3 mb-3">
                        Sign In
                    </button>
                </form>

                <div class="text-center mt-3">
                    <p class="mb-0 text-white-50">Don't have an account? <a asp-action="Register" class="fw-bold">Register</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
