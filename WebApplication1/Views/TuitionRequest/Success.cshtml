@{
    ViewData["Title"] = "Application Sent";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="glass-card p-5 text-center">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h2 class="mb-3 text-white">Application Sent!</h2>
                <p class="text-white-50 mb-4">The guardian has received your request. Good luck!</p>
                
                <a asp-controller="TuitionOffer" asp-action="Index" class="btn btn-gradient px-5 py-2 fw-bold" style="text-decoration: none; color: white !important;">
                    Back to Job Board
                </a>
            </div>
        </div>
    </div>
</div>
