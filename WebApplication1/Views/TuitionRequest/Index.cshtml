@model IEnumerable<TutorHubBD.Web.Models.TuitionRequest>
@using TutorHubBD.Web.Models

@{
    ViewData["Title"] = "Applications Dashboard";
}

<div class="container mt-5 mb-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white fw-bold" style="text-shadow: 0 2px 4px rgba(0,0,0,0.5);">
            <i class="bi bi-briefcase me-2"></i> Job Applications Received
        </h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light shadow-sm border-0 p-4 text-center" role="alert">
            <h4 class="alert-heading mb-3"><i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i></h4>
            <p class="mb-0 text-muted">No applications received yet.</p>
        </div>
    }
    else
    {
        <div class="dashboard-card">
            <div class="table-responsive">
                <table class="table dashboard-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Applied For (Job)</th>
                            <th>Message</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.StudentName</td>
                                <td>
                                    <a href="mailto:@item.StudentEmail" class="text-decoration-none text-secondary">
                                        <i class="bi bi-envelope me-1"></i> @item.StudentEmail
                                    </a>
                                </td>
                                <td>
                                    <span class="badge-job-title">
                                        @(item.TuitionOffer != null ? item.TuitionOffer.Title : "Job Deleted")
                                    </span>
                                    @if (item.TuitionOffer != null && item.TuitionOffer.Status == JobStatus.Filled)
                                    {
                                        <span class="badge bg-secondary ms-1">Filled</span>
                                    }
                                </td>
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 200px;" title="@item.Message">
                                        @item.Message
                                    </span>
                                </td>
                                <td>@item.RequestDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @{
                                        var statusClass = item.Status?.ToLower() switch
                                        {
                                            "accepted" => "badge-accepted",
                                            "rejected" => "badge-rejected",
                                            _ => "badge-pending"
                                        };
                                    }
                                    <span class="badge-status @statusClass">@item.Status</span>
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2 align-items-center">
                                        @if (item.Status == "Pending")
                                        {
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.RequestID" />
                                                <input type="hidden" name="status" value="Accepted" />
                                                <button type="submit" class="btn btn-icon-action btn-icon-accept" title="Shortlist">
                                                    <i class="fa-solid fa-check"></i>
                                                </button>
                                            </form>
                                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.RequestID" />
                                                <input type="hidden" name="status" value="Rejected" />
                                                <button type="submit" class="btn btn-icon-action btn-icon-reject" title="Reject">
                                                    <i class="fa-solid fa-xmark"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (item.Status == "Accepted")
                                        {
                                            <span class="badge bg-success me-2">Shortlisted</span>
                                            
                                            @if (item.TuitionOffer != null && item.TuitionOffer.Status == JobStatus.Open)
                                            {
                                                @if (item.TutorId.HasValue && item.TutorId.Value > 0)
                                                {
                                                    <form asp-controller="TuitionOffer" asp-action="ConfirmHiring" method="post" class="d-inline">
                                                        <input type="hidden" name="jobId" value="@item.TuitionOfferId" />
                                                        <input type="hidden" name="tutorId" value="@item.TutorId.Value" />
                                                        <button type="submit" class="btn btn-sm btn-primary fw-bold" onclick="return confirm('Are you sure you want to hire this tutor? This will close the job post.');">
                                                            Hire This Tutor
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark" title="This applicant does not have a tutor profile linked">No Tutor Profile</span>
                                                }
                                            }
                                        }
                                        else if (item.Status == "Rejected")
                                        {
                                            <span class="badge bg-secondary">Rejected</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
