@model List<TutorHubBD.Web.Models.ViewModels.MyApplicationsViewModel>

@{
    ViewData["Title"] = "My Applications";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-2"><i class="bi bi-briefcase"></i> My Applications</h1>
            <p class="text-muted">Track the status of all your tuition job applications.</p>
        </div>
    </div>

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-check"></i> Application History</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Job Title</th>
                                <th scope="col">Guardian</th>
                                <th scope="col">Salary</th>
                                <th scope="col">Applied Date</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var application in Model)
                            {
                                <tr>
                                    <td>@application.RequestId</td>
                                    <td>
                                        <strong>@application.JobTitle</strong>
                                    </td>
                                    <td>@application.GuardianName</td>
                                    <td>@application.Salary.ToString("C")</td>
                                    <td>@application.AppliedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @switch (application.Status.ToLower())
                                        {
                                            case "hired":
                                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Hired</span>
                                                break;
                                            case "accepted":
                                                <span class="badge bg-info"><i class="bi bi-hand-thumbs-up"></i> Accepted</span>
                                                break;
                                            case "rejected":
                                                <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rejected</span>
                                                break;
                                            case "pending":
                                            default:
                                                <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Pending</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No Applications Yet</h4>
                    <p class="text-muted">You haven't applied for any tuition jobs yet.</p>
                    <a asp-controller="TuitionOffer" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-search"></i> Browse Available Jobs
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning">@Model.Count(a => a.Status.ToLower() == "pending")</h3>
                    <p class="mb-0">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.Count(a => a.Status.ToLower() == "hired")</h3>
                    <p class="mb-0">Hired</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h3 class="text-danger">@Model.Count(a => a.Status.ToLower() == "rejected")</h3>
                    <p class="mb-0">Rejected</p>
                </div>
            </div>
        </div>
    </div>
</div>
