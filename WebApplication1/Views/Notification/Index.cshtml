@model List<TutorHubBD.Web.Models.Notification>

@{
    ViewData["Title"] = "My Notifications";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="mb-2"><i class="bi bi-bell"></i> My Notifications</h1>
            <p class="text-muted">Stay updated with your latest activities on TutorHubBD.</p>
        </div>
        <div class="col-auto">
            @if (Model.Any(n => !n.IsRead))
            {
                <button class="btn btn-outline-primary" onclick="markAllAsReadAndReload()">
                    <i class="bi bi-check-all"></i> Mark All as Read
                </button>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var notification in Model)
                    {
                        <a href="@Url.Action("Click", "Notification", new { id = notification.Id })" 
                           class="list-group-item list-group-item-action @(notification.IsRead ? "" : "list-group-item-light")">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-1">
                                        @if (!notification.IsRead)
                                        {
                                            <span class="badge bg-primary me-2">New</span>
                                        }
                                        <h6 class="mb-0 @(notification.IsRead ? "text-muted" : "")">
                                            @notification.Title
                                        </h6>
                                    </div>
                                    <p class="mb-1 @(notification.IsRead ? "text-muted" : "")">
                                        @notification.Message
                                    </p>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @notification.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                    </small>
                                </div>
                                <div class="ms-3">
                                    @if (!string.IsNullOrEmpty(notification.RelatedLink))
                                    {
                                        <i class="bi bi-arrow-right text-primary"></i>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-bell-slash display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No Notifications Yet</h4>
                    <p class="text-muted">You'll receive notifications when there's activity on your account.</p>
                </div>
            }
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h3 class="text-primary">@Model.Count</h3>
                        <p class="mb-0">Total Notifications</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h3 class="text-warning">@Model.Count(n => !n.IsRead)</h3>
                        <p class="mb-0">Unread</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h3 class="text-success">@Model.Count(n => n.IsRead)</h3>
                        <p class="mb-0">Read</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function markAllAsReadAndReload() {
            fetch('/Notification/MarkAllAsRead', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
}
