@model TutorHubBD.Web.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Total Users</div>
                <div class="card-body">
                    <h5 class="card-title display-4">@Model.TotalUsers</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Jobs</div>
                <div class="card-body">
                    <h5 class="card-title display-4">@Model.TotalJobs</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-header">Total Revenue</div>
                <div class="card-body">
                    <h5 class="card-title display-4">@Model.TotalRevenue.ToString("C")</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Unpaid Commissions</h4>
                </div>
                <div class="card-body">
                    @if (Model.PendingInvoices.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Invoice ID</th>
                                        <th>Tutor Name</th>
                                        <th>Amount</th>
                                        <th>Date Generated</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoice in Model.PendingInvoices)
                                    {
                                        <tr>
                                            <td>@invoice.InvoiceID</td>
                                            <td>
                                                @if (invoice.Tutor?.User != null)
                                                {
                                                    @invoice.Tutor.User.UserName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown</span>
                                                }
                                            </td>
                                            <td>@invoice.Amount.ToString("C")</td>
                                            <td>@invoice.GeneratedDate.ToShortDateString()</td>
                                            <td>
                                                <form asp-action="MarkAsPaid" asp-route-id="@invoice.InvoiceID" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-success btn-sm">Mark as Paid</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No pending invoices found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
