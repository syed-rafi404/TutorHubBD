@model IEnumerable<TutorHubBD.Web.Models.TuitionOffer>

@{
    ViewData["Title"] = "Tuition Jobs";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white fw-bold" style="text-shadow: 0 2px 4px rgba(0,0,0,0.5);">
            <i class="bi bi-briefcase me-2"></i>Available Tuition Jobs
        </h2>
        @if (User.IsInRole("Teacher"))
        {
            <a asp-controller="Home" asp-action="AiJobSearch" class="btn btn-gradient">
                <i class="bi bi-robot me-2"></i>AI Job Search
            </a>
        }
    </div>

    <!-- AI Search Section for Teachers -->
    @if (User.IsInRole("Teacher"))
    {
        <div class="glass-card p-4 mb-4">
            <form asp-controller="Home" asp-action="AiJobSearch" method="post">
                @Html.AntiForgeryToken()
                <div class="row align-items-end">
                    <div class="col-md-10 mb-3 mb-md-0">
                        <label class="form-label text-white fw-bold">
                            <i class="bi bi-robot me-2"></i>Let AI Find Your Perfect Job
                        </label>
                        <input type="text" name="prompt" class="form-control" 
                               placeholder="e.g., I want to teach Math in Mirpur for Class 8-10 with at least 7000 tk salary" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-gradient w-100">
                            <i class="bi bi-search me-2"></i>AI Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    }

    <!-- Traditional Filter Section -->
    <div class="glass-filter-container mb-5">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <input type="text" name="searchCity" class="form-control" placeholder="City (e.g. Dhaka)" value="@ViewData["CurrentCity"]" />
            </div>
            <div class="col-md-3">
                <select name="searchMedium" class="form-select">
                    <option value="" class="text-dark">All Mediums</option>
                    <option value="Bangla Medium" class="text-dark">Bangla Medium</option>
                    <option value="English Medium" class="text-dark">English Medium</option>
                    <option value="English Version" class="text-dark">English Version</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" name="searchClass" class="form-control" placeholder="Class (e.g. Class 8)" value="@ViewData["CurrentClass"]" />
            </div>
            <div class="col-md-3 d-grid">
                <button type="submit" class="btn btn-outline-light fw-bold">
                    <i class="bi bi-funnel me-2"></i>Filter Jobs
                </button>
            </div>
        </form>
    </div>

    <!-- Results Count -->
    @if (Model != null && Model.Any())
    {
        <div class="mb-4">
            <span class="text-white-50">
                <i class="bi bi-list-ul me-2"></i>Showing @Model.Count() job(s)
            </span>
        </div>
    }

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 job-card border-0">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="job-card-title mb-0">@(item.Title ?? "Untitled")</h5>
                            </div>
                            
                            <h6 class="job-card-subtitle mb-3">
                                <i class="bi bi-geo-alt-fill me-1 text-danger"></i> @(item.City ?? "N/A"), @(item.Location ?? "N/A")
                            </h6>
                            
                            <div class="mb-3">
                                <span class="job-info-badge"><i class="bi bi-book me-1"></i> @(item.StudentClass ?? "N/A")</span>
                                <span class="job-info-badge"><i class="bi bi-translate me-1"></i> @(item.Medium ?? "N/A")</span>
                            </div>

                            <h5 class="text-white mb-3">
                                <span class="fw-bold text-success">@item.Salary Tk</span> <small class="text-white-50">/ month</small>
                            </h5>

                            <p class="card-text text-white-50 small mb-4 flex-grow-1">
                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 100)
                                {
                                    @item.Description.Substring(0, 100)<text>...</text>
                                }
                                else
                                {
                                    @(item.Description ?? "No description available")
                                }
                            </p>

                            <div class="d-grid">
                                <a asp-controller="TuitionRequest" asp-action="Apply" asp-route-jobId="@item.Id" class="btn btn-outline-white-premium">
                                    <i class="bi bi-send me-2"></i>Apply Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i> No tuition jobs available at the moment.
                    @if (User.IsInRole("Teacher"))
                    {
                        <br /><small>Try using AI Search to find jobs matching your skills!</small>
                    }
                </div>
            </div>
        }
    </div>
</div>
