@model IEnumerable<TutorHubBD.Web.Models.TuitionOffer>

<h2>Available Tuition Jobs</h2>

<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Location</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Subject</td>
                <td>@item.Location</td>
                <td>@item.Fee</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.OfferID" method="post" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>
