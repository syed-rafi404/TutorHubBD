@{
    ViewData["Title"] = "Complete Your Profile";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center py-4">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
                    <h3 class="mt-3 mb-0">Profile Incomplete</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>You cannot apply for jobs until your profile is complete and verified.</strong>
                    </div>

                    <h5 class="mb-3">To apply for tuition jobs, you must:</h5>
                    
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-camera-fill text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <strong>Upload a Profile Picture</strong>
                                <br/>
                                <small class="text-muted">A clear photo helps guardians trust you</small>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-file-text-fill text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <strong>Write a Bio (100+ characters)</strong>
                                <br/>
                                <small class="text-muted">Tell guardians about your teaching experience</small>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-book-fill text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <strong>Select Your Preferred Classes</strong>
                                <br/>
                                <small class="text-muted">Choose which classes you want to teach</small>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-shield-check text-success me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <strong>Get Verified by Admin</strong>
                                <br/>
                                <small class="text-muted">Upload verification documents and wait for approval</small>
                            </div>
                        </li>
                    </ul>

                    <div class="d-grid gap-2">
                        <a asp-action="EditProfile" class="btn btn-primary btn-lg">
                            <i class="bi bi-pencil-square me-2"></i>Complete My Profile
                        </a>
                        <a asp-controller="TuitionOffer" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Jobs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
